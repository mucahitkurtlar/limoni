{
  "name": "limoni",
  "version": "0.1.5",
  "description": "A browser extension for archiving eksi sozluk (eksisozluk.com) data",
  "type": "module",
  "scripts": {
    "build": "bun run build.ts",
    "package": "web-ext build -s dist -a build -n limoni-$npm_package_version.xpi -o",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,css,md}\"",
    "generate-icons": "bun run scripts/generate-icons.ts"
  },
  "dependencies": {
    "lucide-react": "^0.564.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@tailwindcss/cli": "^4.1.18",
    "@types/bun": "1.3.9",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/webextension-polyfill": "^0.12.4",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.3.0",
    "prettier": "3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
